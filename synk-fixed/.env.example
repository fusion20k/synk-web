# -----------------------------
# General App Config
# -----------------------------
APP_NAME=Synk
PORT=3000

# Toggle between demo/testing and production
# DEMO_MODE=true  → uses localhost URLs + demo credentials
# DEMO_MODE=false → uses production URLs + real credentials
DEMO_MODE=true

# -----------------------------
# Google OAuth
# -----------------------------
# Google OAuth scopes (space-separated)
# For calendar access: https://www.googleapis.com/auth/calendar.events https://www.googleapis.com/auth/calendar.readonly
# For full calendar control: https://www.googleapis.com/auth/calendar
# For user identity (optional): openid email profile
GOOGLE_SCOPES=https://www.googleapis.com/auth/calendar.events https://www.googleapis.com/auth/calendar

# Production credentials
GOOGLE_CLIENT_ID=your-production-client-id
GOOGLE_CLIENT_SECRET=your-production-client-secret
GOOGLE_REDIRECT_URI=https://synk-official.com/oauth2callback

# Demo credentials (localhost)
GOOGLE_CLIENT_ID_DEMO=your-demo-client-id
GOOGLE_CLIENT_SECRET_DEMO=your-demo-client-secret
GOOGLE_REDIRECT_URI_DEMO=http://127.0.0.1:3000/oauth2callback

# -----------------------------
# Notion OAuth
# -----------------------------
# Production credentials
NOTION_CLIENT_ID=your-production-notion-client-id
NOTION_CLIENT_SECRET=your-production-notion-client-secret
NOTION_REDIRECT_URI=https://synk-official.com/oauth2callback

# Demo credentials (localhost)
NOTION_CLIENT_ID_DEMO=your-demo-notion-client-id
NOTION_CLIENT_SECRET_DEMO=your-demo-notion-client-secret
NOTION_REDIRECT_URI_DEMO=http://127.0.0.1:3000/oauth2callback

# -----------------------------
# Sync Settings
# -----------------------------
# Auto-sync interval in milliseconds
# (default: every 1 minutes = 60000 ms)
SYNC_INTERVAL=60000

# -----------------------------
# OAuth Server Settings
# -----------------------------
# Port for local OAuth callback server (demo mode)
OAUTH_PORT=3000
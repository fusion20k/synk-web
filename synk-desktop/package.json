{
  "name": "synk",
  "version": "1.0.0",
  "description": "Effortless Notion â†” Google Calendar Sync",
  "main": "src/main-simple.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.synk.desktop",
    "productName": "Synk",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "synk",
      "repo": "synk-desktop"
    }
  },
  "author": "Synk Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7"
  }
}
